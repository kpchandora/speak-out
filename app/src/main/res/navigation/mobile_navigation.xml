<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/navigation_profile" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.speakout.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_profile_fragment"
            app:destination="@id/navigation_profile"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_home_to_usersListFragment"
            app:destination="@id/usersListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.speakout.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.speakout.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.speakout.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="profileUrl"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="transitionTag"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_navigation_profile_to_usersListFragment"
            app:destination="@id/usersListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_navigation_profile_to_postViewFragment"
            app:destination="@id/postViewFragment" />

    </fragment>

    <fragment
        android:id="@+id/usersListFragment"
        android:name="com.speakout.users.UsersListFragment"
        android:label="{actionType}"
        tools:layout="@layout/users_list_fragment">

        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="actionType"
            android:defaultValue="Likes"
            app:argType="com.speakout.users.ActionType" />

        <action
            android:id="@+id/action_usersListFragment_to_navigation_profile"
            app:destination="@id/navigation_profile"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/postViewFragment"
        android:name="com.speakout.ui.profile.PostViewFragment"
        android:label="fragment_post_view"
        tools:layout="@layout/fragment_post_view">

        <argument
            android:name="postData"
            app:argType="com.speakout.posts.create.PostData"
            app:nullable="true" />

        <action
            android:id="@+id/action_postViewFragment_to_usersListFragment"
            app:destination="@id/usersListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

</navigation>